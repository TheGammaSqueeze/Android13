<resources>
    <!-- Do not enable auto rotation switching -->
    <bool name="def_accelerometer_rotation">false</bool>

    <!-- Disable the lockscreen -->
    <bool name="def_lockscreen_disabled">true</bool>

    <!-- Decrease animation duration. -->
    <fraction name="def_window_animation_scale">0%</fraction>
    <fraction name="def_window_transition_scale">0%</fraction>

    <bool name="def_dim_screen">false</bool>
    <bool name="def_install_non_market_apps">true</bool>
    <string name="def_airplane_mode_radios">bluetooth,wifi</string>
    <string name="airplane_mode_toggleable_radios">bluetooth,wifi</string>
    <bool name="def_haptic_feedback">false</bool>  
    <!-- Default screen brightness, translate to 85 in kernel -->
    <integer name="def_screen_brightness">120</integer>
    <bool name="def_bluetooth_on">false</bool>
</resources>
